<div class = "container" style="margin-top: 300px">
    
    <form class="form-horizontal" action='/update_act/<%= @one_post.id %>' method='POST'>
      <div class="form-group">
        <label for="exampleInputEmail1" class="col-sm-2 control-label">제목</label>
        <div class="col-sm-10">
             <input name="head" type="text" class="form-control" value="<%= @one_post.title %>"> 
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">내용</label>
        <div class="col-sm-10">
         <textarea name="body" class="form-control" rows="5" ><%= @one_post.content %></textarea>   
        </div>
      </div>
      <div class="text-center">
            <button type="submit" class="btn btn-primary">수정하기</button>
      </div>
    </form>
</div>
